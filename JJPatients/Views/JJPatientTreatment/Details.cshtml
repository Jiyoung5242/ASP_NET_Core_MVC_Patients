@model JJPatients.Models.PatientTreatment

@{
    ViewData["Title"] = "Details treatments for " + ViewData["DiagnosisName"] + ", Patient: " + ViewData["PatientName"];
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>PatientTreatment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DatePrescribed)
        </dt>
        <dd class="col-sm-10">
            @Model.DatePrescribed.ToString("dd MMMMM yyyy HH:mm")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comments)
        </dt>
        <dd class="col-sm-10">
            <textarea rows="3" readonly>@Html.DisplayFor(model => model.Comments)</textarea>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PatientDiagnosis)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PatientDiagnosis.PatientDiagnosisId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Treatment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Treatment.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.PatientTreatmentId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
